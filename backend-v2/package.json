{
    "name": "reservation-system-api",
    "version": "2.0.0",
    "description": "Multi-tenant Reservation System API - TypeScript + PostgreSQL",
    "main": "dist/index.js",
    "type": "module",
    "engines": {
        "node": ">=20.0.0"
    },
    "scripts": {
        "dev": "tsx watch src/index.ts",
        "build": "tsc",
        "start": "node dist/index.js",
        "lint": "eslint src/**/*.ts",
        "typecheck": "tsc --noEmit",
        "test": "vitest",
        "test:ci": "vitest run",
        "test:integration": "RUN_INTEGRATION=true vitest run tests/integration",
        "test:e2e": "vitest run tests/e2e",
        "migrate:firestore": "tsx scripts/migrate_firestore_to_pg.ts"
    },
    "keywords": [
        "reservation",
        "salon",
        "multi-tenant",
        "typescript",
        "postgresql",
        "cloud-sql"
    ],
    "author": "",
    "license": "ISC",
    "dependencies": {
        "express": "^5.0.1",
        "firebase-admin": "^12.7.0",
        "cors": "^2.8.5",
        "helmet": "^8.0.0",
        "express-rate-limit": "^7.5.0",
        "zod": "^3.24.1",
        "uuid": "^11.0.3",
        "date-fns": "^4.1.0",
        "date-fns-tz": "^3.2.0",
        "winston": "^3.17.0",
        "dotenv": "^16.4.7",
        "pg": "^8.18.0"
    },
    "devDependencies": {
        "@types/express": "^5.0.0",
        "@types/cors": "^2.8.17",
        "@types/uuid": "^10.0.0",
        "@types/node": "^22.10.5",
        "@types/pg": "^8.16.0",
        "typescript": "^5.7.3",
        "tsx": "^4.19.2",
        "eslint": "^9.18.0",
        "@typescript-eslint/eslint-plugin": "^8.20.0",
        "@typescript-eslint/parser": "^8.20.0",
        "vitest": "^2.1.8"
    }
}
