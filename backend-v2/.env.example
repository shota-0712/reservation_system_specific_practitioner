# ===========================================
# Reservation System API - Environment Config
# ===========================================

# Server Configuration
NODE_ENV=development
PORT=8080
HOST=0.0.0.0

# PostgreSQL Configuration
DB_HOST=127.0.0.1
DB_PORT=5432
DB_USER=app_user
DB_PASSWORD=change_me
DB_NAME=reservation_system

# Firebase Configuration
# On Cloud Run: Leave PRIVATE_KEY and CLIENT_EMAIL empty to use Application Default Credentials
# For local development: Set explicit credentials or use Firebase emulator
FIREBASE_PROJECT_ID=your-project-id
FIREBASE_CLIENT_EMAIL=
FIREBASE_PRIVATE_KEY=
FIREBASE_DATABASE_URL=

# Encryption Key (32 bytes for AES-256)
ENCRYPTION_KEY=your-32-byte-encryption-key-here!

# CORS Configuration
ALLOWED_ORIGINS=https://liff.line.me,http://localhost:3000,http://localhost:3001

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=debug

# LINE Configuration (Default/Fallback)
LINE_CHANNEL_ACCESS_TOKEN=your-line-channel-access-token
LINE_CHANNEL_SECRET=your-line-channel-secret
LINE_CHANNEL_ID=your-line-channel-id

# Google Calendar OAuth
GOOGLE_OAUTH_CLIENT_ID=
GOOGLE_OAUTH_CLIENT_SECRET=
GOOGLE_OAUTH_REDIRECT_URI=
GOOGLE_OAUTH_SCOPES=openid,email,profile,https://www.googleapis.com/auth/calendar
